<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.profile.EditActivity">

    <!-- Back button -->

    <!-- Profile picture -->

    <!-- Camera icon -->

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle_background"
        android:contentDescription="Profile Picture"
        android:src="@drawable/profile_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <ImageView
        android:id="@+id/ivCameraIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/cam"
        android:contentDescription="Camera Icon"
        app:layout_constraintBottom_toBottomOf="@id/ivProfilePicture"
        app:layout_constraintEnd_toEndOf="@id/ivProfilePicture"
        app:layout_constraintBottom_margin="4dp"
        app:layout_constraintEnd_margin="4dp" />

    <!-- Profile title -->
    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFA500"
        app:layout_constraintTop_toBottomOf="@id/ivProfilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp" />

    <!-- Username label -->

    <!-- Username input -->

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="Username"
        android:textColor="#4D4D4D"
        android:textSize="14sp"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvProfileTitle" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="349dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Username"
        android:padding="12dp"
        app:layout_constraintEnd_margin="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvUsername" />

    <!-- Email label -->

    <!-- Email input -->

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="Email"
        android:textColor="#4D4D4D"
        android:textSize="14sp"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/etUsername" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="349dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Email"
        android:padding="12dp"
        app:layout_constraintEnd_margin="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail" />

    <!-- Password label -->

    <!-- Password input -->

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Password"
        android:textColor="#4D4D4D"
        android:textSize="14sp"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/etEmail" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="349dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Password"
        android:padding="12dp"
        app:layout_constraintEnd_margin="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPassword" />

    <!-- Phone Number label -->

    <!-- Phone Number input -->

    <!-- Save button -->

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Phone Number"
        android:textColor="#4D4D4D"
        android:textSize="14sp"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="349dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Phone Number"
        android:padding="12dp"
        app:layout_constraintEnd_margin="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="344dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_orange"
        android:padding="12dp"
        android:text="Save"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_margin="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="32dp"
        app:layout_constraintTop_toBottomOf="@id/etPhoneNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>
